<h1>Communities#show</h1>
<p>Find me in app/views/communities/show.html.erb</p>
<div class="container chatroom">
  <h1>#<%= @community.name %></h1>

  <div class="messages">
    <% @community.community_messages.each do |message| %>
      <div id="message-<%= message.id %>">
        <small>
          <strong><%= message.user.name %></strong>
          <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
        </small>
        <div class="message-block">
          <div class="message-container">
            <div class="message"><p><%= message.content %></p></div>
          </div>
        </div>
      </div>
    <% end %>
  </div>


<%= simple_form_for [@community, @community_message],
  html: {class: "d-flex"} do |f|
%>
  <%= f.input :content,
    label: false,
    placeholder: "Message ##{@community.name}",
    wrapper_html: {class: "flex-grow-1"}
  %>
  <%= f.submit "Send", class: "btn btn-primary mb-3" %>
<% end %>
</div>
