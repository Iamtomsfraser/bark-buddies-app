<div class="container mt-2">

  <h2 class="text-center">Fellow Buddiesüêï  </h2>
    <%= form_with url: users_path, method: :get, class: "d-flex justify-content-center", id: "search-form" do  %>
      <%= text_field_tag :query,
            params[:query],
            class: "form-control input-search",
            placeholder: "üîçType a location...",
            id: "search-bar"
      %>
    <%= javascript_include_tag 'search_form' %>
<% end %>

</div>

<div class="container mt-4 text-center">
  <h5> <%= @message %> </h5>
</div>

  <div class="cards-container d-flex flex-wrap justify-content" style="margin-left: 30px; margin-right: 30px;">
    <% @users.each do |user| %>
      <% user.dogs.each do |dog| %>
        <%=  link_to user_path(user) do %>
          <% first_photo = dog.photos.first %>
          <div class="profile-card-users my-4 mx-4 col-2" style="width:200px;" >
            <div class= "dog-picture-users" style="background-image: url('<%= image_path first_photo.url %>')">
              <%= image_tag user.photo.url, height: 80, width: 80, class: "user-avatar", style: "border-radius: 50%;" %>
            </div>
            <h5 class="black-link mt-2"><%= user.name %> & <%= dog.name %> </h5>
            <div class="d-flex">
              <p><%= dog.breed %> ‚Ä¢</p>
              <p> <i class="fa-solid fa-mars"></i></p>
            </div>
            <p><small><i class="fa-solid fa-location-dot "></i> <%= user.location %></small></p>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
