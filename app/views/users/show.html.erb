<!-- Back Button and Dog Details -->
<div class="banner d-flex align-items-center">
    <a href="<%= @referer_url %>" class="back-button"><i class="fa-solid fa-chevron-left"></i></a>
    <h1><%= @dog.name %></h1>
</div>

  <div class="container-fluid">
      <!-- Photo Carousel and Upload Photo Button -->
      <div id="carouselExampleIndicators" class="carousel slide position-relative" data-bs-ride="carousel">
          <!-- Carousel Indicators -->
          <div class="carousel-indicators">
              <% @dog.photos.each_with_index do |photo, index| %>
                  <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="<%= index %>" class="<%= 'active' if index.zero? %>" aria-label="Slide <%= index + 1 %>"></button>
              <% end %>
          </div>
          <!-- Carousel Inner -->
          <div class="carousel-inner">
              <% @dog.photos.each_with_index do |photo, index| %>
                  <div class="carousel-item <%= 'active' if index.zero? %>">
                      <%= image_tag photo.url, class: 'd-block w-100', alt: "Slide #{index + 1}" %>
                  </div>
              <% end %>
          </div>
          <!-- Carousel Controls -->
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
          </button>
          <!-- Upload Photo Button -->
          <% if current_user == @user %>
              <div class="position-absolute bottom-0 end-0 mb-3 me-3" style="z-index: 1;">
                  <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#photoModal">
                      <i class="fa-solid fa-pen"></i>
                  </button>
              </div>
          <% end %>
      </div>

      <!-- Dog Details -->
      <div class="mt-2 dog_details text-left">
          <h5><strong><%= @dog.breed %></strong></h5>
          <p><%= @dog.age %> years old, <%= @dog.gender %></p>
          <p class="mt-3">Fun fact about me - <%= @dog.bio %></p>
      </div>

      <!-- User Card -->
        <div class="user-profile d-flex align-items-start">
            <%= image_tag @user.photo.url, alt: "#{@user.name} Profile Picture", class: 'profile-image-small align-self-start' %>
            <div class="profile-info">
                <h4><strong><%= @user.name %>, </strong><span class="lighter-font"><%= @user.age %></span></h4>
                <strong>About me</strong>
                <p><%= @user.bio %></p>
            </div>
        </div>

                        <!-- Add Friend and Message Buttons -->
          <!-- Edit Profile Button -->
                    <div class="row action-buttons">
                      <div class="col text-center">
                        <% if current_user == @user %>
                          <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#editProfileModal">
                            Edit Profile
                          </button>
                        <% end %>
                      </div>
                    </div>
                    <% unless current_user == @user %>
                      <div class="d-flex justify-content-center actions mt-4">
                        <%= render "private_message_button", user: @user, method: :get, class: 'btn btn-warning me-2' %>
                        <% if @friendship %>
                          <% unless @friendship.confirmed %>
                            <%= button_to friendship_path(@friendship), method: :delete, class: 'btn btn-warning unfollow' do %>
                              <i class="fa-regular fa-circle-xmark"></i> Unfollow
                            <% end %>
                          <% end %>
                        <% else %>
                          <%= button_to friendships_path(receiver_id: @user.id), method: :post, class: 'btn btn-warning' do %>
                            <i class="fa-solid fa-user-plus"></i> Follow
                          <% end %>
                        <% end %>
                      </div>
                    <% end %>
                  <!-- Edit Profile Modal -->
                  <div class="modal fade" id="editProfileModal" tabindex="-1" aria-labelledby="editProfileModalLabel" aria-hidden="true">
                      <div class="modal-dialog">
                          <div class="modal-content">
                              <div class="modal-header">
                                  <h5 class="modal-title" id="editProfileModalLabel">Edit Profile</h5>
                                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                              </div>
                              <div class="modal-body">
                                  <!-- Profile Edit Form -->
                                  <%= simple_form_for @user, url: user_path(@user), method: :put do |f| %>
                                      <%= f.input :name %>
                                      <%= f.input :age %>
                                      <%= f.input :bio %>
                                      <%= f.button :submit, "Save Changes", class: "btn btn-warning submit" %>
                                  <% end %>
                              </div>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
      </div>
  </div>
